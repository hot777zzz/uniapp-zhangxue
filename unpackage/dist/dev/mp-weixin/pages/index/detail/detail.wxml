<view class="detail"><swiper class="swiper" circular="{{true}}" indicator-dots="{{true}}" autoplay="{{true}}"><block wx:for="{{swiperList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item><image class="swiper-image" src="{{item.url}}" mode="aspectFill"></image></swiper-item></block></swiper><scroll-view class="model-select" scroll-x="{{true}}"><view class="button-group"><block wx:for="{{motorcycleModels}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['handleModelChange',['$0'],[[['motorcycleModels','',index,'id']]]]]]]}}" class="{{['button-item',(currentModel===item.id)?'active':'']}}" bindtap="__e">{{''+item.name+''}}</view></block></view></scroll-view><view class="color-select"><view class="color-title">可选颜色</view><scroll-view class="color-list" scroll-y="{{true}}"><view class="color-grid"><block wx:for="{{colorList}}" wx:for-item="color" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['handleColorChange',['$0'],[[['colorList','',index]]]]]]]}}" class="{{['color-item',(currentColor===color.id)?'active':'']}}" bindtap="__e"><image class="color-image" src="{{color.image}}" mode="aspectFit"></image><text class="color-name">{{color.name}}</text></view></block></view></scroll-view></view><block wx:if="{{currentModelData}}"><view class="params-section"><view class="params-title">车辆参数</view><view class="params-grid"><view class="param-item"><text class="param-label">发动机</text><text class="param-value">{{currentModelData.params.engine}}</text></view><view class="param-item"><text class="param-label">最大功率</text><text class="param-value">{{currentModelData.params.power}}</text></view><view class="param-item"><text class="param-label">最大扭矩</text><text class="param-value">{{currentModelData.params.torque}}</text></view><view class="param-item"><text class="param-label">整备质量</text><text class="param-value">{{currentModelData.params.weight}}</text></view><view class="param-item"><text class="param-label">参考价格</text><text class="param-value">{{"¥"+currentModelData.params.price}}</text></view></view></view></block><view class="float-buttons"><button data-event-opts="{{[['tap',[['handleTestDrive',['$event']]]]]}}" class="float-btn test-drive" bindtap="__e"><text class="btn-text">预约试驾</text></button><button data-event-opts="{{[['tap',[['handleOrder',['$event']]]]]}}" class="float-btn order-now" bindtap="__e"><text class="btn-text">立即订购</text></button></view></view>